{
	"format_version": "1.19.30",
	"minecraft:entity": {
		"description": {
			"identifier": "home:turret",
			"is_summonable": true,
			"is_spawnable": true,
			"animations": {
				"turret": "controller.animation.turret"
			},
			"scripts": {
				"animate": [
					"turret"
				]
			},
			"properties": {
				"home:rust_state": {
					"client_sync": true,
					"type": "int",
					"default": 0,
					"range": [ 0, 2 ]
					// 0 - CLEAN
					// 1 - RUSTING
					// 2 - RUSTED
				}
			}
		},
		"component_groups": {
			"home:instant_despawn": {
				"minecraft:instant_despawn": {}
			},
			"shooter": {
				"minecraft:shooter": {
					"def": "minecraft:arrow"
				},
				"minecraft:behavior.ranged_attack": {
					"priority": 0,
					"attack_interval": 1,
					"y_max_head_rotation": 360,
					"attack_radius": 16.0,
					"swing": true
				},
				"minecraft:behavior.nearest_attackable_target": {
					"priority": 0,
					"reselect_targets": true,
					"scan_interval": 10,
					"entity_types": [
						{
							"filters": {
								"test": "is_family",
								"subject": "other",
								"value": "monster"
							},
							"max_dist": 64
						}
					],
					"must_see": true
				}
			}
		},
		"components": {
			"minecraft:health": {
				"value": 45,
				"max": 45
			},
			"minecraft:movement": {
				"value": 0.0
			},
			"minecraft:type_family": {
				"family": [ "turret", "inanimate" ]
			},
			"minecraft:collision_box": {
				"height": 1.4,
				"width": 0.7
			},
			"minecraft:interact": {
				"interactions": [
					{
						"health_amount": 5,
						"on_interact": {
							"filters": {
								"all_of": [
									{
										"test": "has_equipment",
										"subject": "other",
										"domain": "hand",
										"value": "minecraft:iron_ingot"
									},
									{
										"test": "is_missing_health",
										"value": true
									}
								]
							}
						},
						"swing": true,
						"use_item": true,
						"play_sounds": "irongolem.repair"
					},
					{
						"health_amount": 45,
						"on_interact": {
							"filters": {
								"all_of": [
									{
										"test": "has_equipment",
										"subject": "other",
										"domain": "hand",
										"value": "minecraft:iron_block"
									},
									{
										"test": "is_missing_health",
										"value": true
									}
								]
							}
						},
						"swing": true,
						"use_item": true,
						"play_sounds": "irongolem.repair"
					}
				]
			},
			"minecraft:movement.basic": {},
			"minecraft:navigation.generic": {},
			"minecraft:physics": {},
			"minecraft:pushable": {
				"is_pushable": false,
				"is_pushable_by_piston": false
			},
			"minecraft:knockback_resistance": {
				"value": 1
			},
			"minecraft:damage_sensor": {
				"triggers": [
					{
						"on_damage": {
							"filters": {
								"test": "is_family",
								"subject": "other",
								"value": "turret"
							}
						},
						"deals_damage": false
					},
					{
						"on_damage": {
							"filters": {
								"test": "is_family",
								"subject": "other",
								"value": "monster"
							}
						},
						"cause": "entity_attack",
						"damage_multiplier": 0.25
					},
					{
						"cause": "projectile",
						"damage_multiplier": 0.25
					}
				]
			},
			"minecraft:inventory": {
				"inventory_size": 5,
				"can_be_siphoned_from": false,
				"container_type": "hopper"
			}
		},
		"events": {
			"add_shooter": {
				"add": {
					"component_groups": [
						"shooter"
					]
				}
			},
			"remove_shooter": {
				"remove": {
					"component_groups": [
						"shooter"
					]
				}
			},
			"on_shoot": {},
			"add_rust_state": {
				"set_property": {
					"home:rust_state": "query.property('home:rust_state') < 2 ? query.property('home:rust_state') + 1 : 0"
				}
			},
			"home:instant_despawn": {
				"add": {
					"component_groups": [
						"home:instant_despawn"
					]
				}
			}
		}
	}
}